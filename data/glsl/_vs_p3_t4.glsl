uniform highp mat4 u_m44Transform;

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
attribute highp vec3 a_v3Position;
attribute highp vec4 a_v4Texcoord;

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
varying highp vec4 v_v4Texcoord;

//-----------------------------------------------------------------------------
//-----------------------------------------------------------------------------
void main()
{
    o_v4Position = u_m44Transform * vec4(a_v3Position, 1);
    v_v4Texcoord = a_v4Texcoord;
}

